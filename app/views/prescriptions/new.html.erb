<!-- Validation failure messages -->
<% if @prescription.errors.any? %>
  <% @prescription.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Prescription</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_prescription" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for doctor_id -->
      <div class="form-group">
        <label for="doctor_id" class="control-label">
          Doctor
        </label>

        <input type="text" id="doctor_id" name="doctor_id" placeholder="Doctor" class="form-control" value="<%= @prescription.doctor_id %>">
      </div>

      <!-- Label and input for patient_id -->
      <div class="form-group">
        <label for="patient_id" class="control-label">
          Patient
        </label>

        <input type="text" id="patient_id" name="patient_id" placeholder="Patient" class="form-control" value="<%= @prescription.patient_id %>">
      </div>

      <!-- Label and input for data_type_id -->
      <div class="form-group">
        <label for="data_type_id" class="control-label">
          Data type
        </label>

        <input type="text" id="data_type_id" name="data_type_id" placeholder="Data type" class="form-control" value="<%= @prescription.data_type_id %>">
      </div>

      <button class="btn btn-success">
        Create Prescription
      </button>
      or
      <a href="/prescriptions">Cancel</a>
    </form>
  </div>
</div>
