<!-- Validation failure messages -->
<% if @data_type.errors.any? %>
  <% @data_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Data Type #<%= @data_type.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_data_type/<%= @data_type.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @data_type.name %>">
      </div>

      <!-- Label and input for data_type -->
      <div class="form-group">
        <label for="data_type" class="control-label">
          Data type
        </label>

        <input type="text" id="data_type" name="data_type" placeholder="Data type" class="form-control" value="<%= @data_type.data_type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @data_type.description %>">
      </div>

      <button class="btn btn-warning">
        Update Data Type
      </button>
      or
      <a href="/data_types/<%= @data_type.id %>">Cancel</a>
    </form>
  </div>
</div>
