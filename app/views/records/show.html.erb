<div class="page-header">
  <h3>Record #<%= @record.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Patient</dt>
      <dd>
        <% if @record.patient.present? %>
          <a href="/patients/<%= @record.patient_id %>">
            <%= @record.patient.email %>
          </a>
        <% end %>
      </dd>

      <dt>Prescription</dt>
      <dd><%= @record.prescription_id %></dd>

      <dt>Date time</dt>
      <dd><%= @record.date_time %></dd>

      <dt>Data</dt>
      <dd><%= @record.data %></dd>

      <dt>Datatype</dt>
      <dd>
        <% if @record.datatype.present? %>
          <a href="/data_types/<%= @record.datatype_id %>">
            <%= @record.datatype.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/records" class="btn btn-primary">
        Back
      </a>
      <a href="/records/<%= @record.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_record/<%= @record.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
